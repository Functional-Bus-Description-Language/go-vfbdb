CAPI=2:

name: wbfbd:vhdl:func_continuous_single_two_regs_no_returns

filesets:
  tb_cosim:
    files:
      - tb.vhd
    file_type: vhdlSource-2008
    depend:
      - vhdl::cosim

  wbfbd_dep:
    depend:
      - fbdl::wbfbd

targets:
  tb_cosim_python:
    default_tool: ghdl
    toplevel: tb_cosim
    generate:
      - wbfbd_regs
    filesets:
      - wbfbd_dep
      - tb_cosim
    hooks:
      pre_run: [tb_cosim]
    parameters:
      - G_SW_GW_FIFO_PATH=/tmp/go-wbfbd/func/continuous_single_two_regs_no_returns/python_vhdl
      - G_GW_SW_FIFO_PATH=/tmp/go-wbfbd/func/continuous_single_two_regs_no_returns/vhdl_python

generate:
  wbfbd_regs:
    generator: wbfbd
    parameters:
      python: [--path, ../../../../../build/wbfbd/func/continuous_single_two_regs_no_returns/python/vhdl]
      vhdl: []
      main: ../bus.fbd

parameters:
  G_SW_GW_FIFO_PATH:
    datatype: str
    paramtype: generic
  G_GW_SW_FIFO_PATH:
    datatype: str
    paramtype: generic

scripts:
  tb_cosim:
    cmd:
      - ../../../tests/co-simulations/common/python/tb_cosim.sh
      - func
      - continuous_single_two_regs_no_returns
      - vhdl
