namespace eval vfbdb::vhdl-wb3::static-0 {
	variable ctx [hbs::utils::ctxName [namespace current]]
	variable hdl [hbs::utils::hdlName [namespace current]]

	# Custom setupHdl because of -add-timestamp
	proc _setupHdl {ctx hdl sw} {
		hbs::SetTool "ghdl"
		hbs::SetTop "tb_cosim"

		hbs::AddDep vfbdb::gen \
			-add-timestamp \
			$hdl -path autogen/$ctx/tb-$sw \
			$sw -path autogen/$ctx/tb-$sw \
			[hbs::CoreDir]/../bus.fbd

		hbs::AddDep $hdl\::cosim::src
		hbs::AddFile *.vhd

		hbs::SetGeneric G_SW_GW_FIFO_PATH "/tmp/go-vfbdb/$ctx/$sw-to-$hdl"
		hbs::SetGeneric G_GW_SW_FIFO_PATH "/tmp/go-vfbdb/$ctx/$hdl-to-$sw"

		set logDir "/tmp/go-vfbdb/$ctx/tb-$sw"
		if {[file exist $logDir] eq 0} {
			file mkdir $logDir
		}
	}

	proc tb-python {} {
		variable ctx
		variable hdl
		set sw "python"

		_setupHdl $ctx $hdl $sw
		hbs::utils::runPython $ctx $hdl $sw

		hbs::Run
	}

	proc tb-c-sync {} {
		variable ctx
		variable hdl
		set sw "c-sync"

		_setupHdl $ctx $hdl $sw
		hbs::utils::compileAndRunC $ctx $hdl $sw

		hbs::Run
	}

	hbs::Register
}
