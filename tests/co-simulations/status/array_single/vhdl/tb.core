CAPI=2:

name: wbfbd:vhdl:status_array_single

filesets:
  tb_cosim:
    files:
      - tb.vhd
    file_type: vhdlSource-2008
    depend:
      - vhdl::cosim

  wbfbd_dep:
    depend:
      - fbdl::wbfbd

targets:
  tb_cosim_python:
    default_tool: ghdl
    toplevel: tb_cosim
    generate:
      - wbfbd_regs
    filesets:
      - wbfbd_dep
      - tb_cosim
    hooks:
      pre_run: [tb_cosim_python]
    parameters:
      - G_SW_GW_FIFO_PATH=/tmp/go-wbfbd/status/array_single/python_vhdl
      - G_GW_SW_FIFO_PATH=/tmp/go-wbfbd/status/array_single/vhdl_python

generate:
  wbfbd_regs:
    generator: wbfbd
    parameters:
      python: [--path, ../../../../../build/wbfbd/status/array_single/python/vhdl]
      vhdl: []
      main: ../bus.fbd

parameters:
  G_SW_GW_FIFO_PATH:
    datatype: str
    paramtype: generic
  G_GW_SW_FIFO_PATH:
    datatype: str
    paramtype: generic

scripts:
  tb_cosim_python:
    cmd:
      - ../../../tests/co-simulations/common/python/tb_cosim.sh
      - status
      - array_single
      - vhdl
