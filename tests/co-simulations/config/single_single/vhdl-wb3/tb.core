CAPI=2:

name: vfbdb:vhdl-wb3:config_single_single

filesets:
  tb_cosim:
    files:
      - tb.vhd
    file_type: vhdlSource-2008
    depend:
      - vhdl-wb3::cosim

  vfbdb_dep:
    depend:
      - fbdl::vfbdb

targets:
  tb_python:
    default_tool: ghdl
    toplevel: tb_cosim
    generate:
      - vfbdb_regs
    filesets:
      - vfbdb_dep
      - tb_cosim
    hooks:
      pre_run: [tb_python]
    parameters:
      - G_SW_GW_FIFO_PATH=/tmp/go-vfbdb/config/single_single/python_vhdl-wb3
      - G_GW_SW_FIFO_PATH=/tmp/go-vfbdb/config/single_single/vhdl-wb3_python
  tb_c-sync:
    default_tool: ghdl
    toplevel: tb_cosim
    generate:
      - c-sync
    filesets:
      - vfbdb_dep
      - tb_cosim
    hooks:
      pre_run: [tb_c-sync]
    parameters:
      - G_SW_GW_FIFO_PATH=/tmp/go-vfbdb/config/single_single/c-sync_vhdl-wb3
      - G_GW_SW_FIFO_PATH=/tmp/go-vfbdb/config/single_single/vhdl-wb3_c-sync

generate:
  vfbdb_regs:
    generator: vfbdb
    parameters:
      python: [-path, ../../../../../build/vfbdb/config/single_single/python/vhdl-wb3]
      vhdl-wb3: []
      main: ../bus.fbd
  c-sync:
    generator: vfbdb
    parameters:
      c-sync: [-path, ../../../../../build/vfbdb/config/single_single/c-sync/vhdl-wb3/vfbdb]
      vhdl-wb3: []
      main: ../bus.fbd

parameters:
  G_SW_GW_FIFO_PATH:
    datatype: str
    paramtype: generic
  G_GW_SW_FIFO_PATH:
    datatype: str
    paramtype: generic

scripts:
  tb_python:
    cmd:
      - ../../../tests/co-simulations/common/python/tb_cosim.sh
      - config
      - single_single
      - vhdl-wb3
  tb_c-sync:
    cmd:
      - ../../../tests/co-simulations/common/c-sync/tb_cosim.sh
      - config
      - single_single
      - vhdl-wb3

